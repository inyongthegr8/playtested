---
// Simple approach - let CMS find config automatically
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <title>Content Manager</title>
  </head>
  <body>
    <!-- Use a known stable version -->
    <script src="https://unpkg.com/decap-cms@3.3.3/dist/decap-cms.js"></script>
    
    <!-- Load custom preview -->
    <script src="/admin/index.js"></script>
    
    <!-- Simple initialization with debugging -->
    <script>
      console.log('üöÄ Admin page loaded');
      
      // OAuth message debugging
      window.addEventListener('message', (event) => {
        console.log('üì® Received message:', event.data);
        
        if (typeof event.data === 'string' && event.data.includes('authorization:github')) {
          console.log('üîê OAuth message:', event.data);
        } else if (event.data?.type?.includes?.('authorization:github')) {
          console.log('üîê OAuth object:', event.data);
        }
      });
      
      // Wait for CMS to load then initialize
      if (window.CMS) {
        console.log('‚úÖ CMS available immediately');
        initializeCMS();
      } else {
        window.addEventListener('load', () => {
          console.log('üîÑ Window loaded, checking for CMS...');
          if (window.CMS) {
            initializeCMS();
          } else {
            console.error('‚ùå CMS still not available');
          }
        });
      }
      
      function initializeCMS() {
        try {
          console.log('üé¨ Starting CMS initialization...');
          // Let CMS automatically find and load config.yml
          window.CMS.init();
          console.log('‚úÖ CMS.init() called successfully');
        } catch (error) {
          console.error('‚ùå CMS initialization failed:', error);
        }
      }
    </script>
  </body>
</html>